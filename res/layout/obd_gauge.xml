    android:layout_height="match_parent"
    android:gravity="top" >

    <FrameLayout
        android:id="@+id/gauge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top" >

    </FrameLayout>

    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
